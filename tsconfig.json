{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"baseUrl": "src",
		"typeRoots": ["./node_modules/@types", "./your-custom-typings-folder"],
		"rootDir": "./src",
		"outDir": "./build",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "json-schema"]
}
